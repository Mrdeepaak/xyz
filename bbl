  <script>
    const products = [
      {title:'Classic Sourdough', price:'₹220', img:'https://images.unsplash.com/photo-1546549036-7c5b3e6a1f1b?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=8241f9b1b5de0f2a'},
      {title:'Chocolate Truffle Cake (1kg)', price:'₹950', img:'https://images.unsplash.com/photo-1542827638-4a8f2a6d9e6c?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=2a7f0a7b1f1e6b2a'},
      {title:'Butter Croissant (Pack of 4)', price:'₹320', img:'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=6c3a6b4f8d1a8f6b'},
      {title:'Chocolate Chip Cookies', price:'₹180', img:'https://images.unsplash.com/photo-1519681393784-d120267933ba?q=80&w=800&auto=format&fit=crop&ixlib=rb-4.0.3&s=3c8d4b5a2e7a1f1b'}
    ];

    const grid = document.getElementById('productGrid');
    products.forEach(p=>{
      const div = document.createElement('div');
      div.className='card';
      div.innerHTML = `<img src="${p.img}" alt="${p.title}"><div style="display:flex;justify-content:space-between;align-items:center"><div><strong>${p.title}</strong><div style=\"color:var(--muted);font-size:13px;margin-top:6px\">Freshly baked</div></div><div class=\"price\">${p.price}</div></div><div style=\"display:flex;gap:10px;margin-top:6px\"><button class=\"btn\" onclick=\"order('${encodeURIComponent(p.title)}')\">Order</button><button class=\"btn secondary\" onclick=\"more('${encodeURIComponent(p.title)}')\">Details</button></div>`;
      grid.appendChild(div);
    });

    function order(item){
      // open WhatsApp (user can customize number)
      const number = '919999999999'; // <- replace with your bakery number
      const text = `Hi, I want to order: ${decodeURIComponent(item)} (via Pearl Jain website)`;
      const url = `https://wa.me/${number}?text=${encodeURIComponent(text)}`;
      window.open(url,'_blank');
    }
    function more(item){
      alert(decodeURIComponent(item) + "\n\nMade fresh daily. Click Order to message us on WhatsApp.");
    }

    // simple form handler (demo only)
    function submitForm(e){
      e.preventDefault();
      const name = document.getElementById('name').value;
      const phone = document.getElementById('phone').value;
      const msg = document.getElementById('msg').value;
      const text = `New order from ${name} (${phone}): ${msg}`;
      const number = '919999999999';
      window.open(`https://wa.me/${number}?text=`+encodeURIComponent(text),'_blank');
    }

    document.getElementById('orderNow').addEventListener('click',()=>{
      document.getElementById('productGrid').firstElementChild?.querySelector('button')?.click();
    })
  </script>
