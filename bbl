  <script>
    // Simple data-driven products & menu
    const PRODUCTS = [
      {title:"Chocolate Truffle Cake", img:"https://images.unsplash.com/photo-1541782814453-c6e0d3a86b03?w=1000&q=80&auto=format&fit=crop", price: "‚Çπ699", tag:"1/2 kg"},
      {title:"Red Velvet Cupcakes", img:"https://images.unsplash.com/photo-1490474418585-ba9bad8fd0ea?w=1000&q=80&auto=format&fit=crop", price: "‚Çπ399", tag:"6 pcs"},
      {title:"Sourdough Loaf", img:"https://images.unsplash.com/photo-1549931319-a545dcf3bc73?w=1000&q=80&auto=format&fit=crop", price: "‚Çπ249", tag:"700 g"},
      {title:"Assorted Cookies", img:"https://images.unsplash.com/photo-1549996647-23c9aa3f9a02?w=1000&q=80&auto=format&fit=crop", price: "‚Çπ299", tag:"250 g"}
    ];

    const MENU = [
      {cat:"Cakes", item:"Chocolate Truffle", size:"1/2 kg", price:"‚Çπ699"},
      {cat:"Cakes", item:"Black Forest", size:"1/2 kg", price:"‚Çπ649"},
      {cat:"Cakes", item:"Red Velvet", size:"1/2 kg", price:"‚Çπ749"},
      {cat:"Pastries", item:"Dutch Truffle", size:"single", price:"‚Çπ129"},
      {cat:"Pastries", item:"Blueberry Cheesecake", size:"single", price:"‚Çπ179"},
      {cat:"Breads", item:"Sourdough", size:"700 g", price:"‚Çπ249"},
      {cat:"Breads", item:"Multigrain", size:"400 g", price:"‚Çπ89"},
      {cat:"Cookies", item:"Chocolate Chip", size:"250 g", price:"‚Çπ299"},
      {cat:"Cookies", item:"Nankhatai", size:"250 g", price:"‚Çπ249"}
    ];

    const $ = (sel, ctx=document) => ctx.querySelector(sel);
    const $$ = (sel, ctx=document) => Array.from(ctx.querySelectorAll(sel));

    // Populate products
    const productsEl = document.getElementById('products');
    productsEl.innerHTML = PRODUCTS.map(p=>`
      <article class="card">
        <img loading="lazy" alt="${p.title}" src="${p.img}" />
        <div class="body">
          <div style="display:flex; align-items:center; justify-content:space-between; gap:.6rem">
            <h3 style="margin:0">${p.title}</h3>
            <span class="badge">${p.tag}</span>
          </div>
          <p class="price">${p.price}</p>
          <a class="btn" href="#contact" aria-label="Order ${p.title}">Order</a>
        </div>
      </article>
    `).join('');

    // Populate menu table
    const menuBody = document.getElementById('menuBody');
    menuBody.innerHTML = MENU.map(m=>`<tr><td>${m.cat}</td><td>${m.item}</td><td>${m.size}</td><td>${m.price}</td></tr>`).join('');

    // Mobile nav toggle
    const menuBtn = document.getElementById('menuBtn');
    const navLinks = document.getElementById('navLinks');
    menuBtn?.addEventListener('click', ()=> navLinks.classList.toggle('open'));

    // Smooth anchor scroll
    $$('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', e=>{
        const id = a.getAttribute('href');
        if(id.length>1){
          e.preventDefault();
          document.querySelector(id).scrollIntoView({behavior:'smooth'});
          navLinks.classList.remove('open');
        }
      });
    });

    // WhatsApp link
    const wa = document.getElementById('waLink');
    const phone = '+919000000000'; // <-- change to your number
    const msg = encodeURIComponent('Hi bakery4youuuu! I would like to place an order.');
    wa.setAttribute('href', `https://wa.me/${phone.replace(/\D/g,'')}?text=${msg}`);

    // Simple success message for Netlify/vanilla POST fallback
    const status = document.getElementById('formStatus');
    $('#orderForm').addEventListener('submit', function(e){
      // Let the platform handle the submission; also show optimistic UI
      status.textContent = 'Submitting‚Ä¶';
      setTimeout(()=> status.textContent = 'Thanks! We\'ll reach out shortly on WhatsApp/phone.', 600);
    });

    // Footer year
    document.getElementById('yr').textContent = new Date().getFullYear();
  </script>
